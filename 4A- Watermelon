#include<iostream>
using namespace std;

int main(){
    
    int w;  //The weight of the watermelon.
    cin >> w;

    // as sum of two even number is always even therefore the w must be even

    if (w % 2 == 0 && w != 2)
    {
        cout <<"YES"<<endl;
    }
    else
        cout<<"NO"<<endl;
    
    return 0;
}
